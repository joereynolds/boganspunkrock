{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <h2 class="title">{{ title }}</h2>

        <div class="gallery">
            <div class="gallery__images">
                {% for image in images %}
                    {% if image['Key'] ends with '.jpg' %}
                        <img class="gallery__image" src="{{imageBaseUrl}}{{image['Key']}}"/>
                    {% endif %}
                {% else %}
            </div>
            <p>
                There aren't any images in this gallery.
                Why not go
                    <a
                        href="/gallery">
                        back to the gallery page
                    </a>
                and try a different one?
            </p>
                {% endfor %}
        </div>
    </section>

{% endblock %}
